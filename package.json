{
  "name": "xm-playlist",
  "version": "1.0.0",
  "description": "bpm playlist tracking",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "build": "rimraf build; tsc -p .",
    "start": "NODE_ENV=dev DEBUG=xmplaylist* nodemon --exec 'ts-node' src/index.ts",
    "scanner": "NODE_ENV=dev DEBUG=xmplaylist* nodemon --exec 'ts-node' src/scanner.ts",
    "test": "NODE_ENV=test npm run lint && jest --coverage --no-cache",
    "lint": "tslint \"src/**/*.ts\""
  },
  "dependencies": {
    "debug": "^2.6.8",
    "kcors": "^2.2.1",
    "koa": "^2.2.0",
    "koa-logger": "^3.0.0",
    "koa-router": "^7.2.1",
    "koa2-raven": "^4.0.9",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "pg": "^6.2.4",
    "raven": "^2.0.2",
    "redis": "^2.7.1",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "sequelize": "^4.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/debug": "^0.0.29",
    "@types/jest": "^20.0.1",
    "@types/kcors": "^2.2.1",
    "@types/koa": "^2.0.39",
    "@types/koa-logger": "^2.0.2",
    "@types/koa-router": "^7.0.22",
    "@types/lodash": "^4.14.66",
    "@types/moment": "^2.13.0",
    "@types/progress": "^2.0.0",
    "@types/raven": "^1.2.2",
    "@types/redis": "^2.6.0",
    "@types/request-promise-native": "^1.0.5",
    "@types/sequelize": "^4.0.60",
    "chai": "^4.0.2",
    "jest": "^20.0.4",
    "nock": "^9.0.13",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "engines": {
    "node": ">= 8"
  },
  "keywords": [
    "xm",
    "sirius",
    "siriusxm",
    "radio",
    "recentlyplayed"
  ],
  "author": "scttcper",
  "license": "MIT"
}

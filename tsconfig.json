{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "lib": ["dom", "es2017"],
    "outDir": "build"
  },
  "include": [
    "src/**/*",
    "models/**/*",
    "config/**/*",
    "commands/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

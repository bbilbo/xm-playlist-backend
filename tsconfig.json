{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "module":"commonjs",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "models/**/*",
    "config/**/*",
    "commands/**/*"
  ]
}
